{
  "private": true,
  "workspaces": [
    "client"
  ],
  "name": "gold-streamer",
  "version": "0.3.2",
  "description": "Reads mocap data streamed from Axis Neuron and distributes via OSC and WebSocket.",
  "author": {
    "name": "Andreas Schlegel",
    "url": "http://www.sojamo.de"
  },
  "contributors": [
    {
      "name": "Oliver Winks",
      "url": "https://paperplane.software"
    }
  ],
  "main": "app/start.js",
  "type": "module",
  "bin": {
    "axis-streamer": "bin/axis-streamer"
  },
  "scripts": {
    "client": "yarn workspace client",
    "client:build": "yarn client build",
    "client:serve": "yarn client serve",
    "server:test": "echo \"Error: no test specified\" && exit 1",
    "server:help": "yarn node ./app/start.js --help",
    "server:with": "yarn node ./app/start.js",
    "server:stream": "yarn run server:with --mode stream",
    "dev:stream": "concurrently \"yarn run client:serve\" \"yarn run server:stream\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paperplanesoftware/gold-streamer.git"
  },
  "license": "ISC",
  "dependencies": {
    "@ygoe/msgpack": "^1.0.2",
    "arg": "^4.1.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "osc": "2.4.1",
    "winston": "^3.2.1",
    "ws": "^7.2.5"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "prettier": "2.0.5"
  }
}
